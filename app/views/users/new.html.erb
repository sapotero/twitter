<% provide(:title, 'Sign up') %>

<div class="span4 offset4">
  <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "input-block-level", placeholder: "Name" %>
      
      <%= f.label :email %>
      <%= f.text_field :email, class: "input-block-level", placeholder: "Email address" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "input-block-level", placeholder: "Password" %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "input-block-level", placeholder: "Confirmation" %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
</div>